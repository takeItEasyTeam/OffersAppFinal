doctype html
html(lang='en')
  head
    title Offers
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/libs/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href = '/static/css/style.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')

    script(src='/socket.io/socket.io.js')
    script(src='/static/js/sockets.js')
  body
    .jumbotron
      .container.text-center
    nav.navbar.navbar-inverse
      .container-fluid
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='#myNavbar')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(rel='home', href='#', title='Buy Sell Everyting')
            img(style='max-width:110px; margin-top: -27px;', src='../static/images/logo2.png')

        #myNavbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.hvr-float-shadow
              a(href='/') Всички оферти
            li.hvr-float-shadow
              a(href='/see') Море
            li.hvr-float-shadow
              a(href='/mountain') Планина
            li.hvr-float-shadow
              a(href='/spa') Спа
            li.hvr-float-shadow
              a(href='/excursion') Екскурзия

          form.navbar-form.navbar-right(role='search' action='/search' method='GET')
            .form-group.input-group
             input.form-control(type='text' name = 'city' placeholder='Search..')
             span.input-group-btn
              button.btn.btn-default(type='submit')
                span.glyphicon.glyphicon-search
          ul.nav.navbar-nav.navbar-right
            li
                a(href='/shopingCart')
                  span.glyphicon.glyphicon-shopping-cart
                  |  Cart
                  span.badge
                    if session.cart
                      =session.cart.totalQty
            if !user
              li.hvr-float-shadow
                a(href='/login') Влез
              li.hvr-float-shadow
                a(href='/register') Регистрация
            if user
              li.hvr-float-shadow
                a(href='/profile')
                  span.glyphicon.glyphicon-user
                  |  Профил
              li.hvr-float-shadow
                a(href='/createOffer') Създай Оферта
              li.hvr-float-shadow
                a(href='/chat') Чат
              li.hvr-float-shadow
                a(href='/logout') Излез
    .container.proba
      != messages('message', locals)
      if errors
        each error, i in errors
          div(class="alert alert-danger") #{error.msg}
      block content
      script(src='/libs/handlebars/dist/handlebars.js')
      script(src='../static/js/main.js')