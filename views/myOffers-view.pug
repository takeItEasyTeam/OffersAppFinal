extends layout

block content
    h1(class="text-center") Моите обяви
    hr
    .row
    if context.length >0 
      for item in context
        .col-md-3.col-sm-6.hero-feature.hvr-bob
            .thumbnail
                if item.files
                    if item.files[0]
                        img(src='/' + item.files[0].path, alt='')
                    else
                        img(src='https://ofertini.com/imgdata/336/kasno-lyato-kushadasa-turciya-noshtuvki-baza-426920.png')
                else
                    img(src='https://ofertini.com/imgdata/336/kasno-lyato-kushadasa-turciya-noshtuvki-baza-426920.png')
                .caption
                    h3= item.destination
                    p Град:
                        =item.city
                    p Цена:
                        =item.price
                    p
                    a.btn.btn-success(href='/edit/' + item._id) Edit 
                    a.btn.btn-primary(href='/' + item._id) More Info
                    a.btn.btn-primary.delete-offer(href='#',data-id=item._id) Delete
                .ratings
                    - let ratesSum = 0;
                    - for (let i = 0; i < item.comments.length; i++)
                        - ratesSum += item.comments[i].rate;
                    - let avegareRate = ratesSum/item.comments.length || 0; 
                    - let rateCount = item.comments.length;
                    p.pull-right 
                        case rateCount
                            when 1
                                span #{rateCount} коментар
                            default
                                span #{rateCount} коментара
                    p.star
                        - for (let j = 0; j < 5; j++)
                            if avegareRate >= (j+1)
                                span.glyphicon.glyphicon-star
                            else
                                span.glyphicon.glyphicon-star-empty
                    hr
                    p Брой поръчки: 
    else
        h3 Все още нямате публикувани оферти!