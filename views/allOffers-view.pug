extends layout

block content

  .row.text-center
    for item in context
      .col-md-3.col-sm-6.hero-feature.hvr-bob
        .thumbnail
            img(src='http://placehold.it/800x500', alt='')
            .caption
                h3= item.destination
                p Град:
                    =item.city
                p Цена:
                    =item.price
                p
                  a.btn.btn-success(href='#') Buy Now! 
                  a.btn.btn-primary(href="/" + item.id) More Info


                



                