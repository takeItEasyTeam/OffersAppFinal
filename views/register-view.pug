extends layout

block content
    .col-md-5.col-md-offset-3
        .panel.panel-success
            .panel-heading.text-center РЕГИСТРАЦИЯ
            .panel-body
                form(action="/register" method="post")
                    .form-group
                        label(class="control-label" for="firstName") Име:
                        input(id="firstName" name="firstName" class="form-control" type="text")
                    .form-group
                        label(class="control-label" for="lastName") Фамилия:
                        input(id="lastName" name="lastName" class="form-control" type="text")
                    .form-group
                        label(class="control-label" for="registerUser") Потребителско име:
                        input(id="registerUser" name="username" class="form-control" type="text")
                    .form-group
                        label(class="control-label" for="email") E-mail:
                        input(id="emailr" name="email" class="form-control" type="text")
                    .form-group
                    label(class="control-label" for="phoneNumber") Телефонен номер:
                    input(id="phoneNumber" name="phoneNumber" class="form-control" type="text")
                    .form-group
                    label(class="control-label" for="country") Държава:
                    input(id="country" name="country" class="form-control" type="text")
                    .form-group
                    label(class="control-label" for="town") Град:
                    input(id="town" name="town" class="form-control" type="text")
                    .form-group
                        label(class="control-label" for="registerPassword") Парола:
                        input(id="registerPassword" name="password" class="form-control" type="password")
                    .form-group
                        label(class="control-label" for="repeatPassword") Повтори парола:
                        input(id="repeatPassword" name="repeatPassword" class="form-control" type="password")
                    .form-group
                        button(id="btnRegister" type="submit" class="btn btn-success btn-block") Регистрирай
