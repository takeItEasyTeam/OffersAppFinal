extends layout

block content
  .container
    .row
      .col-xs-12.col-sm-12.col-md-6.col-lg-6.col-xs-offset-0.col-sm-offset-0.col-md-offset-3.col-lg-offset-3.toppad
        .panel.panel-primary
            .panel-heading
              h3.panel-title
                =user.username 
            .panel-body
              .row
               .col-md-3.col-lg-3(align='center')
                 if user.files
                  if user.files[0]
                   img.img-circle.img-responsive(alt='User Pic', src='/' + user.files[0].path)
                  else
                   img.img-circle.img-responsive(alt='User Pic', src='/static/images/users/avatar.png')
                 else
                   img.img-circle.img-responsive(alt='User Pic', src='/static/images/users/avatar.png')
               .col-md-9.col-lg-9
                table.table.table-user-information
                  tbody
                    tr
                        td First Name:
                        td=user.firstName
                    tr
                        td Last Name:
                        td=user.lastName
                    tr
                        td Phone number:
                        td=user.phoneNumber
                    tr
                        td E-mail:
                        td=user.email
                    tr
                        td Country:
                        td=user.country
                    tr
                        td Town: 
                        td=user.town
                a#my-ads.btn.btn-primary(href="/profile/myOffers") My Offers
                form(action="/profile" method="POST" enctype="multipart/form-data")
                    .form-group
                    label(class="control-label" for="image") Upload profile picture
                    input(type="file" name="image" id="file" class="form-control")
                    div(id="imgContainer" class="col-sm-12")
                    br
                    button(type="submit" class="btn btn-primary pull-right")
                        | Save image 
                        span.glyphicon.glyphicon-send
                    br
            .panel-footer
  script(src='/static/js/show-image.js')
