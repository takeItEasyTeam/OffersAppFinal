extends layout

block content    
    .col-md-4.col-md-offset-3        
        .panel.panel-success
            .panel-heading.text-center  Login form
            .panel-body
                form(action="/login" method="post")
                    .form-group
                        label(class="control-label" for="signupUser") Username
                        input(id="signupUser" name="username" class="form-control" type="text")
                    .form-group
                        label(class="control-label" for="signupPassword") Password
                        input(id="signupPassword" name="password" class="form-control" type="password")
                    .form-group
                        button(id="btnLogin" type="submit" class="btn btn-success btn-block") Login
